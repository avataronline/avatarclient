TextEdit < UITextEdit
  font: verdana-11px-antialised
  color: #aaaaaa
  size: 86 22
  text-offset: 0 4
  opacity: 1
  padding: 4
  image-source: /images/ui/textedit
  image-border: 1
  selection-color: #aaaaaa
  selection-background-color: #999999
  $disabled:
    color: #aaaaaa88
    opacity: 0.5

PasswordTextEdit < TextEdit
  text-hidden: true

MultilineTextEdit < TextEdit
  multiline: true
